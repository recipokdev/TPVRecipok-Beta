{
  "name": "tpvrecipok",
  "version": "0.1.30",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux",
    "publish": "electron-builder --publish always",
    "publish:win": "electron-builder --win --publish always -c electron-builder.stable.json",
    "publish:linux": "electron-builder --linux --publish always -c electron-builder.stable.json",
    "publish:win:beta": "electron-builder --win --publish always -c electron-builder.beta.json",
    "publish:linux:beta": "electron-builder --linux --publish always -c electron-builder.beta.json"
  },
  "keywords": [],
  "author": {
    "name": "RecipokDev",
    "email": "recipokdev@gmail.com"
  },
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^39.2.5",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "icon": "assets/icon.ico",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!node_modules/.cache/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "extraResources": [
        {
          "from": "assets/open-drawer.exe",
          "to": "assets/open-drawer.exe"
        }
      ]
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "icon": "assets/icon.png",
      "category": "Office",
      "extraResources": [
        {
          "from": "assets/udev/99-tpvrecipok-cashdrawer.rules",
          "to": "assets/udev/99-tpvrecipok-cashdrawer.rules"
        }
      ]
    },
    "deb": {
      "depends": [
        "libfuse2"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/recipokdev/TPVRecipok.git"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  }
}
