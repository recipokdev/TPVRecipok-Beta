{
  "name": "tpvrecipok",
  "version": "0.1.3",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^39.2.5",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.recipok.tpvrecipok",
    "productName": "TPV Recipok",
    "icon": "assets/icon.ico",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!node_modules/.cache/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "recipokdev",
        "repo": "TPVRecipok"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/recipokdev/TPVRecipok.git"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  }
}
